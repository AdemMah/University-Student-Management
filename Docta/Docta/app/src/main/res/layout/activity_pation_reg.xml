<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PationRegActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="247dp"
        android:layout_height="247dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138"
        app:srcCompat="@drawable/ic_sign_up" />


    <EditText
        android:id="@+id/PhonePation"
        android:layout_width="353dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_box"
        android:drawableLeft="@drawable/ic_phone_bar"
        android:drawablePadding="5dp"
        android:ems="10"
        android:maxLength="10"
        android:fontFamily="@font/productsans_regular"
        android:hint="Votre Numéro Téléphone"
        android:includeFontPadding="false"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColorHint="#788699"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailPation" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordPation"
        app:srcCompat="@drawable/ic_age" />

    <EditText
        android:id="@+id/PasswordPation"
        android:layout_width="353dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_box"
        android:drawableLeft="@drawable/ic_lock_bar"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/productsans_regular"
        android:hint="Mot de Passe"
        android:maxLength="10"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#788699"
        app:layout_constraintEnd_toEndOf="@+id/PhonePation"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/PhonePation"
        app:layout_constraintTop_toBottomOf="@+id/PhonePation" />

    <Button
        android:id="@+id/BtnNext"
        android:layout_width="254dp"
        android:layout_height="50dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/boutton"
        android:drawableEnd="@drawable/ic_arrow_next"
        android:drawablePadding="-40dp"
        android:fontFamily="@font/productsans_bold"
        android:paddingRight="50dp"
        android:text="Continuer"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textQution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/productsans_regular"
        android:text="Vous n’avez pas de Compte?"
        android:textColor="#445366"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textNewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/productsans_bold"
        android:text="Inscrivez-Vous."
        android:textColor="#1D73F2"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/textQution" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/productsans_bold"
        android:text="Créer Un Compte"
        android:textColor="#8EAFDB"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--entrer votre nom complet-->
    <Button
        android:id="@+id/BtnBackReg"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/boutton_back"
        android:drawableLeft="@drawable/ic_areow_back"
        android:paddingLeft="8.5dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/NamePation"
        android:layout_width="353dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_box"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/productsans_regular"
        android:hint="Entrer Votre Nom Complet"
        android:includeFontPadding="false"
        android:inputType="text"
        android:paddingLeft="12dp"
        android:textColorHint="#788699"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/AgePation"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:ems="10"
        android:fontFamily="@font/productsans_regular"
        android:inputType="number"


        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/PasswordPation" />

    <EditText
        android:id="@+id/EmailPation"
        android:layout_width="353dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_box"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/productsans_regular"
        android:hint="Entrer Votre Email"
        android:includeFontPadding="false"
        android:inputType="textEmailAddress"
        android:paddingLeft="6dp"
        android:textColorHint="#788699"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NamePation" />



</androidx.constraintlayout.widget.ConstraintLayout>